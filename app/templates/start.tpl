<div id="start" class="article-wrapper page page1" role="article">
  <div id="intro-slider" class="carousel slide page full-width" data-interval="10000">
    <ol class="carousel-indicators">
      <li data-target="#intro-slider" data-slide-to="0" class="active"></li>
      <li data-target="#intro-slider" data-slide-to="1"></li>
      <li data-target="#intro-slider" data-slide-to="2"></li>
      <li data-target="#intro-slider" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
      <div class="item active page">
        <div class="container">
          <div class="carousel-caption row">
            <div class="col-xs-12 col-sm-3 text-right">
              <img src="img/christiankapke.jpg" class="intro-img" alt="{{name}}" title="{{name}}" />
            </div>
            <div class="col-xs-12 col-sm-9 intro-heading">
              <h1 class="headline dark">{{start.item1.title}}</h1>
              <p class="subline lead light">{{start.item1.content}}</p>
            </div>
          </div>
        </div>
      </div>
      <div class="item page">
        <div class="container">
          <div class="carousel-caption intro-heading">
            <h1 class="headline dark">{{start.item2.title}}</h1>
            <p class="subline light">{{start.item2.content}}</p>
          </div>
        </div>
      </div>
      <div class="item page">
        <div class="container">
          <div class="carousel-caption intro-heading">
            <h1 class="headline dark">{{start.item3.title}}</h1>
            <p class="subline light">{{start.item3.content}}</p>
          </div>
        </div>
      </div>
      <div class="item page">
        <div class="container">
          <div class="carousel-caption intro-heading">
            <h1 class="headline dark">{{start.item4.title}}</h1>
            <p class="subline light">{{start.item4.content}}</p>
          </div>
        </div>
      </div>
    </div>
    <a class="left carousel-control" href="#intro-slider" data-slide="prev"><i class="icon-ck-left"></i></a>
    <a class="right carousel-control" href="#intro-slider" data-slide="next"><i class="icon-ck-right"></i></a>
  </div>
</div>
